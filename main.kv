#:include buiding.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "BG.png"
            Rectangle:
                size: self.width, 96
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture
    Buid:
        size_hint: None, None
        size: 64, root.height - 96
        pos: 100, 96
        buid_center: 250
    Buid:
        size_hint: None, None
        size: 64, root.height - 96
        pos: 450, 96
        buid_center: 350
    Buid:
        size_hint: None, None
        size: 64, root.height - 96
        pos: 800, 96
        buid_center: 450
    Buid:
        size_hint: None, None
        size: 64, root.height - 96
        pos: 1150, 96
        buid_center: 350